<!doctype html>
<html>
  <head>
    <!-- Page title for the registration page -->
    <title>Register for <%=shopData.shopName%></title>
    <!-- Link to external CSS stylesheet for styling -->
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <!-- Main heading for the registration page -->
    <h1>Register for <%=shopData.shopName%></h1>
    <!-- Registration form that submits to registered route -->
    <form method="POST" action="registered">
      <p>Username: <input id="username" type="text" name="username" required /></p>
      <p>First name: <input id="first" type="text" name="first" /></p>
      <p>Last name: <input id="last" type="text" name="last" /></p>
      <p>Email: <input id="email" type="email" name="email" /></p>
      <p>Password: <input id="password" type="password" name="password" required /></p>
      <input type="submit" value="Register" />
    </form>
  </body>
</html>